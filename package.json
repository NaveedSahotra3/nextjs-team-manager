    "jose": "^5.9.3",
    "lucide-react": "^0.447.0",
    "nanoid": "^5.0.7",
    "next": "^14.2.33",
    "next-auth": "^4.24.11",
    "nodemailer": "^6.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "stripe": "^19.2.0",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
